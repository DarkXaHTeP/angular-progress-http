{
  "compilerOptions": {
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "../build",
    "declaration": true,
    "noImplicitAny": true,
    "noEmitHelpers": false,
    "lib": [
      "ES2015",
      "DOM"
    ]
  }
}